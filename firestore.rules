// firestore.rules - Multi-tenant security for Philippine payroll system
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for security
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isCompanyAdmin(companyId) {
      return isAuthenticated() 
        && getUserData().company_id == companyId
        && getUserData().role in ['company_admin', 'hr_admin'];
    }
    
    function isCompanyMember(companyId) {
      return isAuthenticated() 
        && getUserData().company_id == companyId;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() 
        && exists(/databases/$(database)/documents/super-admins/$(request.auth.uid));
    }
    
    // ========================================
    // DRAFT REGISTRATIONS - Allow anonymous access
    // ========================================
    match /draft_registrations/{registrationId} {
      // Allow read/write for anyone during registration process
      allow read, write: if true;
    }
    
    // Super Admin access (Platform owners only)
    match /super-admins/{adminId} {
      allow read, write: if isAuthenticated() 
        && request.auth.uid == adminId;
    }
    
    // Platform analytics - Super admins only
    match /platform-analytics/{document=**} {
      allow read: if isSuperAdmin();
      allow write: if false; // Only Cloud Functions can write analytics
    }
    
    // Companies collection - Company admins can manage their company
    match /companies/{companyId} {
      allow read: if true; // Allow subdomain availability checking
      allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
      allow create: if isAuthenticated(); // New company registration
    }
    
    // Users collection - Users can read/write their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated() 
        && isCompanyMember(getUserData().company_id) 
        && resource.data.company_id == getUserData().company_id;
    }
    
    // Company-scoped collections - Complete data isolation
    match /companies/{companyId}/{collection}/{document=**} {
      allow read, write: if isCompanyMember(companyId) || isSuperAdmin();
    }
    
    // Time entries - Employees can create, admins can manage
    match /companies/{companyId}/time_entries/{entryId} {
      allow create: if isCompanyMember(companyId);
      allow read, update, delete: if isCompanyAdmin(companyId) || isSuperAdmin();
      allow read: if isAuthenticated() 
        && resource.data.employee_id == request.auth.uid;
    }
    
    // Payroll records - Admin only access
    match /companies/{companyId}/payroll/{payrollId} {
      allow read, write: if isCompanyAdmin(companyId) || isSuperAdmin();
      allow read: if isAuthenticated() 
        && resource.data.employee_id == request.auth.uid;
    }
    
    // Company settings and configurations - Admin only
    match /companies/{companyId}/settings/{settingId} {
      allow read, write: if isCompanyAdmin(companyId) || isSuperAdmin();
    }
    
    // Kiosk configurations - Admin only
    match /companies/{companyId}/kiosks/{kioskId} {
      allow read, write: if isCompanyAdmin(companyId) || isSuperAdmin();
    }
    
    // Departments and organizational structure
    match /companies/{companyId}/departments/{departmentId} {
      allow read: if isCompanyMember(companyId) || isSuperAdmin();
      allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
    }
    
    // Company announcements and communications
    match /companies/{companyId}/announcements/{announcementId} {
      allow read: if isCompanyMember(companyId) || isSuperAdmin();
      allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
    }
    
    // Audit logs - Read-only for admins
    match /companies/{companyId}/audit_logs/{logId} {
      allow read: if isCompanyAdmin(companyId) || isSuperAdmin();
      allow write: if false; // Only Cloud Functions write audit logs
    }
    
    // Subscription and billing - Company admin only
    match /companies/{companyId}/billing/{billingId} {
      allow read, write: if isCompanyAdmin(companyId) || isSuperAdmin();
    }
    
    // Employee documents and files
    match /companies/{companyId}/employee_documents/{documentId} {
      allow read: if isAuthenticated() 
        && (resource.data.employee_id == request.auth.uid 
            || isCompanyAdmin(companyId) 
            || isSuperAdmin());
      allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
    }
  }
}